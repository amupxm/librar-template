{
  "name": "ad-preview",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "BUILD_MODE=lib tsc -p tsconfig.lib.json && vite build",
    "build:demo": "tsc -p tsconfig.app.json && vite build",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo",
